<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ /index.php?/$1 [L]
	RewriteCond $1 !^(index\.php|images|robots\.txt|css)
</IfModule>
<IfModule !mod_rewrite.c>
    ErrorDocument 404 /Codeigniter_2.2.0/
</IfModule>
